---
import { cn } from "@/lib/utils";

interface Props {
  label?: string;
  class?: string;
}
const { label, class: className } = Astro.props;
---

<span
  class={cn(
    "text-nowrap shrink-0 inline-flex items-center justify-center bg-indigo-950/90 text-indigo-300 px-3 text-sm font-normal leading-none h-6 w-fit rounded-full border border-primary/30 transition-all duration-100 motion-reduce:transition-none",
    className,
  )}
>
  {label}
</span>
