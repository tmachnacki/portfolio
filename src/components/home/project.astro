---
import type { ProjectProps as Props } from "@/data/projects";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

import Card from "../card.astro";
import Skill from "../skill.astro";
import Button from "../ui/button.astro";
import Link from "../ui/link.astro";

import Source from "../icons/source.astro";
import SquareTr from "../icons/square-tr.astro";
import Github from "../icons/github.astro";
import Planet from "../ui/planet.astro";
import { planetClassNames } from "../ui/planet.astro";
import Live from "../icons/live.astro";
import ArrowTr from "../icons/arrow-tr.astro";
import More from "../icons/more.astro";
import ArrowR from "../icons/arrow-r.astro";

const {
  title,
  date,
  subtitle,
  description,
  features,
  thumbnail,
  thumbnailWide,
  images,
  skills,
  actions,
} = Astro.props;
---

<Card class="">
  <div
    class="relative z-10 mb-2 mt-1 hidden h-max overflow-hidden rounded-sm border border-border transition duration-100 motion-reduce:transition-none sm:col-span-2 sm:block lg:group-hover:border-zinc-600"
  >
    <Image
      src={thumbnail!}
      alt={`${title} screenshot`}
      width={1600}
      height={1200}
      class="h-auto w-full rounded-sm object-cover"
      draggable="false"
    />
  </div>

  <div class="z-10 sm:col-span-6">
    <div class="text-base font-medium leading-tight text-foreground">
      <h3>
        {
          actions?.demo ? (
            <a
              class="group/link inline-block items-baseline hover:text-primary motion-reduce:transition-none"
              href={actions.demo}
              target="_blank"
              rel="noreferrer noopener"
              aria-label={`${title} live demo (opens in a new tab)`}
            >
              <span class="inline-block">
                {title}
                <ArrowTr
                  class="inline-block size-[14px] transition-transform group-hover/link:-translate-y-0.5 group-hover/link:translate-x-0.5 motion-reduce:transition-none"
                  aria-hidden="true"
                />
              </span>
            </a>
          ) : (
            title
          )
        }
      </h3>
    </div>

    {
      description && (
        <p class="mt-2 text-sm text-muted-foreground">{description}</p>
      )
    }

    {
      skills && skills.length > 0 && (
        <ul class="mt-3 flex flex-wrap" aria-label="Technologies used">
          {skills.map((skill) => (
            <li class="mr-1.5 mt-2">
              <Skill
                label={skill.name}
                class="lg:group-hover:border-primary/50 lg:group-hover:bg-background lg:group-hover:shadow-md lg:group-hover:shadow-primary/20"
              />
            </li>
          ))}
        </ul>
      )
    }

    {
      actions && (
        <ul class="group/actions mt-5 flex w-max flex-wrap gap-2 text-foreground">
          {actions.source && (
            <li>
              <Planet
                as={"a"}
                href={actions.source}
                class={
                  "size-9 transition duration-100 hover:!opacity-100 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring group-hover/actions:opacity-50 motion-reduce:transition-none"
                }
                target="_blank"
                rel="noreferrer noopener"
                aria-label={`${title} source code on Github (opens in a new tab)`}
                title={"Github"}
              >
                <Github class="size-[18px]" />
              </Planet>
            </li>
          )}

          {actions.demo && (
            <li>
              <Planet
                as={"a"}
                href={actions.demo}
                class={
                  "size-9 transition duration-100 hover:!opacity-100 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring group-hover/actions:opacity-50 motion-reduce:transition-none"
                }
                target="_blank"
                rel="noreferrer noopener"
                aria-label={`${title} live demo (opens in a new tab)`}
                title={"Live Demo"}
              >
                <Live class="size-[18px]" />
              </Planet>
            </li>
          )}

          {actions.details && (
            <li>
              <a
                href={actions.details}
                class={planetClassNames(
                  "size-9 transition duration-100 hover:!opacity-100 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring group-hover/actions:opacity-50 motion-reduce:transition-none",
                )}
                aria-label={`${title} project details page`}
                title={"More Details"}
                data-astro-prefetch
              >
                <ArrowR class="size-[18px]" />
              </a>
            </li>
          )}
        </ul>
      )
    }
  </div>
</Card>
