---
import { Image } from "astro:assets";

import TechListItem from "./tech-list-item.astro";

import Typescript from "../icons/tech/typescript.astro";
import React from "../icons/tech/react.astro";
import Tailwind from "../icons/tech/tailwind.astro";
import Shadcn from "../icons/tech/shadcn.astro";
import Next from "../icons/tech/next.astro";
import AstroIcon from "../icons/tech/astro-icon.astro";
import Convex from "../icons/tech/convex.astro";
import Firebase from "../icons/tech/firebase.astro";
import Node from "../icons/tech/node.astro";
import Stripe from "../icons/tech/stripe.png";
import Vercel from "../icons/tech/vercel.astro";
import Figma from "../icons/tech/figma.astro";
---

<ul class="mt-16 grid w-full grid-cols-1 gap-3 md:grid-cols-2">
  <TechListItem
    name="Typescript"
    description="Less bad javascript"
    backgroundGradientClassName="hover:from-blue-500/10 hover:to-blue-500/0"
    borderGradientClassName="via-blue-500"
    planetClassName="from-blue-500"
  >
    <Typescript class="size-5" />
  </TechListItem>
  <TechListItem
    name="React"
    description="UI framework (not library)"
    backgroundGradientClassName="hover:from-cyan-600/10 hover:to-cyan-600/0"
    borderGradientClassName="via-cyan-600"
    planetClassName="from-cyan-600"
  >
    <React class="size-5" />
  </TechListItem>
  <TechListItem
    name="Tailwind CSS"
    description="Utility-first CSS framework"
    backgroundGradientClassName="hover:from-sky-500/10 hover:to-sky-500/0"
    borderGradientClassName="via-sky-500"
    planetClassName="from-sky-500"
  >
    <Tailwind class="size-5" />
  </TechListItem>
  <TechListItem
    name="Shadcn/ui"
    description="Components"
    backgroundGradientClassName="hover:from-zinc-400/10 hover:to-zinc-400/0"
    borderGradientClassName="via-zinc-400"
    planetClassName="from-zinc-400"
  >
    <Shadcn class="size-4" />
  </TechListItem>
  <TechListItem
    name="NextJS"
    description="Fullstack React framework"
    backgroundGradientClassName="hover:from-zinc-400/10 hover:to-zinc-400/0"
    borderGradientClassName="via-zinc-400"
    planetClassName="from-zinc-400"
  >
    <Next class="size-5" />
  </TechListItem>
  <TechListItem
    name="Astro"
    description="Server-first web framework"
    backgroundGradientClassName="hover:from-fuchsia-500/10 hover:to-fuchsia-500/0"
    borderGradientClassName="via-fuchsia-500"
    planetClassName="from-fuchsia-500"
  >
    <AstroIcon class="size-5" />
  </TechListItem>
  <TechListItem
    name="Convex"
    description="Real-time TS backend"
    backgroundGradientClassName="hover:from-orange-600/10 hover:to-orange-600/0"
    borderGradientClassName="via-orange-600"
    planetClassName="from-orange-600"
  >
    <Convex class="size-7" />
  </TechListItem>
  <TechListItem
    name="Firebase"
    description="Backend as a service"
    backgroundGradientClassName="hover:from-yellow-500/10 hover:to-yellow-500/0"
    borderGradientClassName="via-yellow-500"
    planetClassName="from-yellow-500"
  >
    <Firebase class="size-5" />
  </TechListItem>
  <TechListItem
    name="NodeJS"
    description="JavaScript runtime"
    backgroundGradientClassName="hover:from-lime-500/10 hover:to-lime-500/0"
    borderGradientClassName="via-lime-500"
    planetClassName="from-lime-500"
  >
    <Node class="size-5" />
  </TechListItem>
  <TechListItem
    name="Stripe"
    description="Payment processing"
    backgroundGradientClassName="hover:from-indigo-500/10 hover:to-indigo-500/0"
    borderGradientClassName="via-indigo-500"
    planetClassName="from-indigo-500"
  >
    <Image src={Stripe} alt="Stripe" class="aspect-square size-5 rounded-sm" />
  </TechListItem>
  <TechListItem
    name="Vercel"
    description="Hosting"
    backgroundGradientClassName="hover:from-zinc-400/10 hover:to-zinc-400/0"
    borderGradientClassName="via-zinc-400"
    planetClassName="from-zinc-400"
  >
    <Vercel class="size-4 -translate-y-0.5" />
  </TechListItem>
  <TechListItem
    name="Figma"
    description="UI/UX design tool"
    backgroundGradientClassName="hover:from-zinc-400/10 hover:to-zinc-400/0"
    borderGradientClassName="via-zinc-400"
    planetClassName="from-zinc-400"
  >
    <Figma class="size-5" />
  </TechListItem>
</ul>
