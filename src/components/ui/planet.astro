---
import { cn } from "@/lib/utils";
import type { HTMLTag, Polymorphic } from "astro/types";

type Props<Tag extends HTMLTag> = Polymorphic<{ as: Tag }>;

const { class: className, as: Tag = "div", ...props } = Astro.props;

export const planetClassNames = (className: string) => cn(
  "size-12 inline-flex items-center justify-center bg-gradient-to-br from-zinc-400 to-black via-zinc-950 rounded-full border flex-shrink-0 focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring",
  className,
);
---

<Tag
  class={planetClassNames(className)}
  {...props}
>
  <slot />
</Tag>
