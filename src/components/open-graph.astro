---
import "@/styles/globals.css";
import Layout from "@/layouts/Layout.astro";
import Button from "@/components/ui/button.astro";

const title = "";
const description = "";
---

<Layout title={title} description={description}>
  <div class="relative h-dvh">
    <div class="page-container relative grid h-full w-full place-items-center">
      <div class="flex flex-col items-center justify-center gap-4">
        <h1
          class="bg-gradient-to-b from-white to-indigo-300 bg-clip-text text-9xl font-bold tracking-tight text-transparent"
        >
          Tim Machnacki
        </h1>
        <Button
          variant={"outline"}
          gradient={"primary"}
          class={"w-max px-16 h-24 text-indigo-200 hover:text-indigo-200 text-5xl rounded-full"}
        >
          Frontend Software Engineer
        </Button>
      </div>
    </div>
  </div>
</Layout>
