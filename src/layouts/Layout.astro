---
import "@/styles/globals.css";
import "@fontsource-variable/geist";
import geistWoff2 from "@fontsource-variable/geist/files/geist-latin-wght-normal.woff2";

import Grid from "@/components/grid.astro";
import Particles from "@/components/particles";
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
const ogDescription =
  "Tim Machnacki is a frontend software engineer who builds accessible and performant applications for the web, specializing in React, TypeScript, and Tailwind CSS.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#09090b" />
    <meta name="image" content="https://timmachnacki.dev/open-graph.jpeg" />
    <meta property="og:site_name" content="Tim Machnacki" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={ogDescription} />
    <meta
      property="og:image"
      content="https://timmachnacki.dev/open-graph.jpeg"
    />
    <meta property="og:url" content="https://timmachnacki.dev" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={ogDescription} />
    <meta
      property="twitter:image"
      content="https://timmachnacki.dev/open-graph.jpeg"
    />

    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="64x64" href="/favicon-64x64.png" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={geistWoff2}
      crossorigin="anonymous"
    />
    <link rel="manifest" href="/manifest.json" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body
    class="custom-scrollbar no-scrollbar relative z-10 min-w-[300px] bg-background font-sans text-foreground antialiased"
  >
    <!-- indigo-700 -->
    <Particles
      client:idle
      color="#4338ca"
      className="fixed z-0 h-full w-full overflow-hidden"
    />
    <div
      class="absolute inset-0 -z-10 flex h-[500px] w-full items-center justify-center lg:fixed"
    >
      <Grid
        width={80}
        height={80}
        class="stroke-primary/20 [mask-image:linear-gradient(to_bottom_right,background,transparent_50%,transparent)]"
      />
    </div>
    <slot />
  </body>
</html>

<style is:global>
  *::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  *::-webkit-scrollbar-track {
    background: transparent;
  }

  *::-webkit-scrollbar-thumb {
    background: var(--zinc-700);
    border-radius: 8px;
  }

  *::-webkit-scrollbar-thumb:hover {
    background: var(--zinc-600);
  }

  *::-webkit-scrollbar-thumb:active {
    background: var(--zinc-500);
  }

  .scrollbar-opacity-0::-webkit-scrollbar-thumb {
    opacity: 0;
    transition: opacity;
  }

  .scrollbar-opacity-100::-webkit-scrollbar-thumb {
    opacity: 1;
    transition: opacity;
  }

  .no-visible-scrollbar {
    scrollbar-width: none;
    -ms-overflow-style: none;
    -webkit-overflow-scrolling: touch;
  }

  .no-visible-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>
